<h1><strong>Visualização por tipos de comida</strong></h1>
<br>
<% @view_type_food.each do |food| %>
  <%= image_tag(food.image.url(:thumb)) %>
  <br>
  <br>
  <strong><%= food.name_recipe %></strong>
  <ul>
    <li><strong>Cozinha: </strong><%= food.cuisine %></li>
    <li><strong>Tipo de Comida: </strong><%= food.type_food %></li>
    <li><strong>Preferência de Comida: </strong><%= food.preferences %></li>
    <li><strong>Quantidade de Pratos: </strong><%= food.served_people %></li>
    <li><strong>Tempo de Preparo (hh:mm): </strong><%= food.time_preparation.hour.to_s + ":" + food.time_preparation.min.to_s %></li>
    <li><strong>Dificuldade: </strong><%= food.dificulty %></li>
    <li><strong>Ingredientes: </strong><%= food.ingredients %></li>
    <li><strong>Passo a Passo: </strong><%= food.directions %></li>
  </ul>
  <hr>
<% end %>