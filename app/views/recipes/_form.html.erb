<h1><strong>Cadastro de Receitas</strong></h1>
<%= form_for(@recipe, html: { :multipart => true }) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "Erro") %>: *Preenchimento obrigatório!</h2>
      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <label>Nome da Receita*</label><br>
    <%= f.text_field :name_recipe %><br><br>
    <label>Cozinha*</label><br>
     <%= f.select :cuisine, @list_cuisine.sort.collect {|c| [ c ] } %><br><br>
    <label>Tipo de Comida*</label><br>
    <%= f.text_field :type_food %><br><br>
    <label>Preferência de Comida*</label><br>
    <%= f.select :preferences, @list_preference.sort.collect {|p| [ p ] } %><br><br>
    <label>Quantidade de Pratos</label><br>
    <%= f.text_field :served_people %><br><br>
    <label>Tempo de Preparo (hh:mm)</label><br>
    <%= f.time_select :time_preparation, include_blank: true %><br><br>
    <label>Nível de Dificuldade</label><br>
    <%= f.select(:dificulty, options_for_select([['Fácil', "Fácil"], ['Médio', "Médio"],['Difícil', "Difícil"]])) %><br><br>
    <label>Ingredientes*</label><br>
    <%= f.text_area :ingredients %><br><br>
    <label>Passo a Passo*</label><br>
    <%= f.text_area :directions %><br><br>
    <div class="field">
        <label>Imagem da Receita</label><br>
        <%= f.file_field :image %>
    </div><br><br>
    <button type="submit">Salvar Receita</button>
<% end %>